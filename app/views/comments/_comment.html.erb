<div class="comment">
  <div class="profile"></div>
  <div>
    <div class="name"><%= comment.commenter %></div>
    <div class="comment-body">
      <%= comment.body %>
    </div>
  </div>
  <div class="delete">
    <%= link_to "Delete", [comment.article, comment],
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  </div>
</div>
