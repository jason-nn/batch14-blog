<div class="form">
  <%= form_with model: article do |form| %>
    <div>
      <p>
        <%= form.label :title %>
      </p>
      <%= form.text_field :title %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div class="error">
          <%= message %>
        </div>
      <% end %>
    </div>
    <div class="spacing"></div>
    <div>
      <p>
        <%= form.label :body %>
      </p>
      <%= form.text_area :body %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="error">
          <%= message %>
        </div>
      <% end %>
    </div>
    <div class="spacing"></div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
